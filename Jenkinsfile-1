pipeline {
  agent any
  stages {
    stage('stage 1') {
      steps {
        sh 'echo stage 1'
      }
    }
  stage('Set permissions') {
        steps {
          sh 'chmod +x test-script.sh'
        }
      }
    stage('stage 2') {
      steps {
        retry(5) {
          sh './test-script.sh'
        }
      }
    }
    stage('stage 3') {
      steps {
        sh 'echo stage 3'
      }
    }
  }
  post {
      success {
          mail to: 'osvaldo.perez@itw.mx',
               subject: "Failed Pipeline: ${currentBuild.fullDisplayName}",
               body: "Something is wrong with ${env.BUILD_URL}"
          echo 'Pipeline exitoso'
      }
  }
}
